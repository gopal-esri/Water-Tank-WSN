		function insert_spacer(yCor,title) {
			pdf.autoTable({
				theme: 'grid',
				styles: header_style,
				startY: yCor,
				margin: {left:10, right:10},
				tableLineWidth: 0.4,
				tableLineColor: 0,
				body: [
					[title],
				],
			})
		}

		function insert_table(yCor,content,colStyleType) {
			pdf.autoTable({
				theme: 'grid',
				styles: body_style,
				columnStyles: colStyleType,
				margin: { left: 10, right: 10 },
				tableLineWidth: 0.4,
				tableLineColor: 0,
				startY: yCor,
				body: content,
			})
		}


		// actual PDF options
