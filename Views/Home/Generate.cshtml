			pdf.text('Page 1', 105, 282, null, null, 'center');
			pdf.setTextColor(0, 0, 255); pdf.setFontSize(7);
			pdf.text(10, 288, '40 Scotts Road #22-01 Environment Building Singapore 228231 \nWebsite: www.pub.gov.sg');
			
			pdf.setFontSize(11);

